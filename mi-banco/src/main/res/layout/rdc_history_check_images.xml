<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone">

    <include layout="@layout/rdc_history_check_images_top_section" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/rdc_history_check_amount_title"
                    style="@style/ReviewCheckItemTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/amount" />

                <TextView
                    android:id="@+id/rdc_history_check_item_amount"
                    style="@style/ReviewCheckItemDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/rdc_history_check_amount_title" />

                <LinearLayout
                    style="@style/ReviewCheckItemBottomLine"
                    android:layout_below="@id/rdc_history_check_amount_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/rdc_history_check_date_title"
                    style="@style/ReviewCheckItemTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/rdc_history_deposit_date" />

                <TextView
                    android:id="@+id/rdc_history_check_item_date"
                    style="@style/ReviewCheckItemDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/rdc_history_check_date_title" />

                <LinearLayout
                    style="@style/ReviewCheckItemBottomLine"
                    android:layout_below="@id/rdc_history_check_date_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/rdc_history_reference_num_title"
                    style="@style/ReviewCheckItemTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/rdc_history_reference_num" />

                <TextView
                    android:id="@+id/rdc_history_reference_num"
                    style="@style/ReviewCheckItemDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/rdc_history_reference_num_title" />

                <LinearLayout
                    style="@style/ReviewCheckItemBottomLine"
                    android:layout_below="@id/rdc_history_reference_num_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/rdc_history_deposit_status_title"
                    style="@style/ReviewCheckItemTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/rdc_history_deposit_status" />

                <TextView
                    android:id="@+id/rdc_history_deposit_status"
                    style="@style/ReviewCheckItemDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/rdc_history_deposit_status_title" />

                <LinearLayout
                    style="@style/ReviewCheckItemBottomLine"
                    android:layout_below="@id/rdc_history_deposit_status_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical" />

            </RelativeLayout>

            <TextView
                android:id="@+id/rdc_history_check_images_title"
                style="@style/AccountsSectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:text="@string/rdc_history_images" />

            <LinearLayout
                style="@style/ReviewCheckItemTitleLine"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/rdc_history_ll_front"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/front_check_text"
                    style="@style/AddCheckBullets"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.65"
                    android:gravity="center"
                    android:text="@string/rdc_history_front" />

                <ImageView
                    android:id="@+id/front_check_image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="6dp"
                    android:layout_weight="0.35"
                    android:adjustViewBounds="true"
                    android:background="#000000"
                    android:padding="1dp"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rdc_history_ll_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/back_check_text"
                    style="@style/AddCheckBullets"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.65"
                    android:gravity="center"
                    android:text="@string/rdc_history_back" />

                <ImageView
                    android:id="@+id/back_check_image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="6dp"
                    android:layout_weight="0.35"
                    android:adjustViewBounds="true"
                    android:background="#000000"
                    android:padding="1dp"
                    android:paddingBottom="6dp"
                    android:scaleType="fitCenter" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>