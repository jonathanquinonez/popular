<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_drag_sheet"
        android:contentDescription="imagen"
        android:adjustViewBounds="true"
        android:layout_marginTop="10dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/closeBottonSheet"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/close_modal"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/download"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_amount"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/lyAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                style="@style/AmountValueSimbol"
                android:text="$"/>

            <TextView
                style="@style/AmountValue"
                android:layout_width="wrap_content"
                android:textSize="40dp"
                android:text="0.00"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:text="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        android:background="@drawable/btn_amount_editor"
                        android:layout_margin="20dp"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:text="2"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        android:background="@drawable/btn_amount_editor"
                        android:layout_margin="20dp"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:text="3"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        android:background="@drawable/btn_amount_editor"
                        android:layout_margin="20dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:text="4"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        android:background="@drawable/btn_amount_editor"
                        android:layout_margin="20dp"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:text="5"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        android:background="@drawable/btn_amount_editor"
                        android:layout_margin="20dp"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:text="6"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        android:background="@drawable/btn_amount_editor"
                        android:layout_margin="20dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:text="7"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        android:background="@drawable/btn_amount_editor"
                        android:layout_margin="20dp"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:text="8"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        android:background="@drawable/btn_amount_editor"
                        android:layout_margin="20dp"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:text="9"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        android:background="@drawable/btn_amount_editor"
                        android:layout_margin="20dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:text=".00"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        android:background="@drawable/btn_amount_editor"
                        android:layout_margin="20dp"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:text="0"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_weight="0.1"
                        android:background="@drawable/btn_amount_editor"
                        android:layout_margin="20dp"/>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="0.1"
                        android:background="@drawable/btn_amount_editor"
                        android:layout_margin="20dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/delete"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/btnAmountEditor"
            style="@style/BtnTransfer"
            android:visibility="visible">

            <TextView
                style="@style/BtnTransferText"
                android:text="@string/continue_phrase"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>