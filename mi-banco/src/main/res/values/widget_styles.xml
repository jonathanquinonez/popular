<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="PopularButton">
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:background">@drawable/buttonshape</item>
    </style>

    <style name="GreenButton">
        <item name="android:background">#ff82af54</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minWidth">250dp</item>
    </style>

    <style name="TextWhite">
        <item name="android:textColor">#ffffffff</item>
    </style>
    
    <style name="TextLightBlue">
        <item name="android:textColor">#0099FF</item>
    </style>

    <style name="TextWhiteTitle">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextOrange">
        <item name="android:textColor">#fff8ab40</item>
    </style>

</resources>