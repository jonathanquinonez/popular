<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        style="@style/HeaderText"
        android:text="@string/athm_terms_and_conditions_header" />

    <LinearLayout style="@style/HeaderSeparator" />

    <WebView
        android:id="@+id/webViewTerms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        style="@style/HeaderSeparator"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnAgree"
        style="@style/Button.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/athm_terms_and_conditions_agree"
        android:theme="@style/Button.Blue" />

    <Button
        android:id="@+id/btnDisagree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/athm_terms_and_conditions_disagree"
        android:theme="@style/Button.Grey" />
</LinearLayout>