<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="32dp"
    android:paddingTop="16dp">

    <TextView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/athm_registration_circle_active"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/athm_registration_step"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="42dp"
        android:layout_height="1dp"
        android:background="@color/athm_header" />

    <TextView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/athm_registration_circle_active"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/athm_registration_step"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="21dp"
        android:layout_height="1dp"
        android:background="@color/athm_header" />

    <LinearLayout
        android:layout_width="21dp"
        android:layout_height="1dp"
        android:background="@color/athm_registration_step_inactive" />

    <TextView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/athm_registration_circle_inactive"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/athm_registration_step"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="42dp"
        android:layout_height="1dp"
        android:background="@color/athm_registration_step_inactive" />

    <TextView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/athm_registration_circle_inactive"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/athm_registration_step"
        tools:ignore="HardcodedText" />
</LinearLayout>