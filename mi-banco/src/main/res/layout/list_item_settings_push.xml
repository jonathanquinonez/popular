<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="20dp"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/warningView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/push_desc"
            style="@style/Text.Bigger"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/push_disabled_warning"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/settings_btn"
            style="@style/Text.Bigger"
            android:layout_gravity="left"
            android:background="@android:drawable/list_selector_background"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:text="@string/go_to_push_settings"
            android:textAllCaps="true"
            android:textColor="@color/blue"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="visible"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/notification_push_icon"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            tools:text="Push Notifications"
            android:layout_weight="6"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/push_switch"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:theme="@style/SwitchStyle"
            android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/alertsView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:animateLayoutChanges="true"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:minHeight="20dp"
        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/iconImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/img_alert_blue"
                android:layout_weight="1"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/title_text_alerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/arrow"
                android:paddingLeft="16dp"
                android:textColor="@color/black"
                android:layout_weight="6"/>

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:src="@drawable/back_icon"
                android:layout_weight="1"
                />


        </LinearLayout>



    </LinearLayout>

</LinearLayout>

