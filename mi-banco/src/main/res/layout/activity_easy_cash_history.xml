<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_easy_cash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.popular.android.mibanco.activity.EasyCashHistoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/noTransactionsLayout"
        android:visibility="gone">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ec_history_no_trx"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_above="@+id/imageView2"
                android:layout_alignStart="@+id/textView4"
                android:layout_marginBottom="65dp" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/easycash_gray_parachute"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ec_history_no_trx2"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:layout_marginTop="51dp"
            android:gravity="center"
            android:id="@+id/textView4"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true" />



    </RelativeLayout>

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:id="@+id/trxsScrollView"
     android:visibility="visible"
     android:layout_above="@+id/btnSendMoneyFromNonCust">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/ec_withdrawal_view"
            style="@style/AccountsSection">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/AccountsSectionTitle"
                    android:text="@string/ec_scan_info_title" />

                <TextView
                    style="@style/AccountsSectionTitle"
                    android:text="@string/mc_deletetrx_title"
                    android:id="@+id/deleteWithdrawalTrx"
                    android:layout_weight="1"
                    android:textColor="@color/red"
                    android:textStyle="normal"
                    android:gravity="right"/>

            </LinearLayout>


            <LinearLayout style="@style/AccountsSectionBottomLine"
                android:layout_height="2dp"/>

            <LinearLayout
                android:id="@+id/withdrawals_list"
                style="@style/AccountsSectionList" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ec_inprocess_view"
            style="@style/AccountsSection">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/AccountsSectionTitle"
                    android:text="@string/ec_history_inprocess" />



            </LinearLayout>


            <LinearLayout style="@style/AccountsSectionBottomLine"
                android:layout_height="2dp"/>

            <LinearLayout
                android:id="@+id/inprocess_list"
                style="@style/AccountsSectionList" />

            <LinearLayout
                android:id="@+id/pending_notavailable"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ec_history_no_trx"
                    android:textColor="@color/grey"
                    android:layout_margin="16dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ec_history_view"
            style="@style/AccountsSection">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/AccountsSectionTitle"
                    android:text="@string/ec_history" />

                <TextView
                    style="@style/AccountsSectionTitle"
                    android:text="@string/mc_filtertrx_title"
                    android:id="@+id/filterTrxs"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:gravity="right"/>


            </LinearLayout>


            <LinearLayout style="@style/AccountsSectionBottomLine"
                android:layout_height="2dp"/>

            <LinearLayout
                android:id="@+id/history_list"
                style="@style/AccountsSectionList" />

            <LinearLayout
                android:id="@+id/history_notavailable"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ec_history_not_available"
                    android:textColor="@color/grey"
                    android:layout_margin="16dp"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

 </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Button.Green"
        android:id="@+id/btnSendMoneyFromNonCust"
        android:text="@string/send_cash"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
