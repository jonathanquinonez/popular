<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="49dp"
        android:layout_height="49dp">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/imgContactPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/contact_photo_placeholder"
            app:siBorderColor="@color/white"
            app:siBorderWidth="1dp" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/tvContactPhotoSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:robotoTypeface="roboto_medium" />
    </RelativeLayout>

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/tvContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/tvContactPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/athm_contact_secondary"
        android:textSize="12sp"
        app:robotoTypeface="roboto_light" />
</LinearLayout>