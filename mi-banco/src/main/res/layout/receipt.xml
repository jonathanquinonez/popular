<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/receipt_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/content"
                style="@style/ReceiptContentBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/topPanel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/title_template"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:gravity="center_vertical|left"
                        android:minHeight="30dip"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/alertTitle"
                            style="@android:style/TextAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textAllCaps="true"
                            android:textColor="@color/holo_blue_light"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/titleDivider"
                        style="@style/ReceiptTitleDivider"
                        android:layout_width="match_parent"
                        android:layout_height="2dip"
                        android:background="@color/dialog_holo_title_divider"
                        android:orientation="horizontal" />
                </LinearLayout>

                <TextView
                    android:id="@+id/status_title"
                    style="@style/ReceiptTextTitle"
                    android:text="@string/status_title"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/status"
                    style="@style/ReceiptTextContent"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/error_title"
                    style="@style/ReceiptTextTitle"
                    android:text="@string/error"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/error_message"
                    style="@style/ReceiptTextContent"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/receipt_nr"
                    style="@style/ReceiptTextTitle"
                    android:text="@string/your_receipt_nr_is" />

                <TextView
                    android:id="@+id/reference_nr"
                    style="@style/ReceiptTextContent" />

                <TextView
                    style="@style/ReceiptTextTitle"
                    android:text="@string/from_colon" />

                <RelativeLayout
                    style="@style/ReceiptAccountNicknameBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/from_name"
                        style="@style/ReceiptTextContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="5dp"
                        android:singleLine="false" />

                    <TextView
                        android:id="@+id/from_nr"
                        style="@style/ReceiptTextContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/from_name"
                        android:singleLine="true" />
                </RelativeLayout>

                <TextView
                    style="@style/ReceiptTextTitle"
                    android:text="@string/to_colon" />

                <RelativeLayout
                    style="@style/ReceiptAccountNicknameBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/to_name"
                        style="@style/ReceiptTextContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="5dp"
                        android:singleLine="false" />

                    <TextView
                        android:id="@+id/to_nr"
                        style="@style/ReceiptTextContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/to_name"
                        android:singleLine="true" />
                </RelativeLayout>

                <TextView
                    style="@style/ReceiptTextTitle"
                    android:text="@string/amount_colon" />

                <TextView
                    android:id="@+id/amount"
                    style="@style/ReceiptTextContent" />

                <TextView
                    style="@style/ReceiptTextTitle"
                    android:text="@string/date" />

                <TextView
                    android:id="@+id/date"
                    style="@style/ReceiptTextContent" />

                <TextView
                    android:id="@+id/frequency_title"
                    style="@style/ReceiptTextTitle"
                    android:text="@string/frequency_title"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/frequency"
                    style="@style/ReceiptTextContent"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:id="@+id/stampLayout"
                android:gravity="right|bottom">

                <ImageView
                    android:id="@+id/alert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_alert_icon"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/stamp"
                    android:src="@drawable/stamp_paid"
                    style="@style/ReceiptStamp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/button_close"
                android:theme="@style/Button.Grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:minHeight="30dp"
                android:minWidth="125dp"
                android:text="@string/close" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>