<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/SelectStatementPage"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <Button
                android:id="@+id/btn_by_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_default_holo_light"
                android:text="@string/by_month" />

            <Button
                android:id="@+id/btn_by_payee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_default_holo_light"
                android:text="@string/by_payee" />

            <Button
                android:id="@+id/btn_by_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_default_holo_light"
                android:text="@string/by_account" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_transfer_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/almost_black"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_receipts_card"
                style="@style/AccountsItemImage"
                android:layout_width="112dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/image" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_receipts_to"
                    style="@style/AccountsItemTitle"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:textIsSelectable="false"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_to_receipts_number"
                    style="@style/AccountsItemTitle"
                    android:layout_width="wrap_content"
                    android:textColor="@color/grey"
                    android:textIsSelectable="false" />
            </LinearLayout>
        </LinearLayout>

        <com.foound.widget.AmazingListView
            android:id="@+id/receipts_list"
            style="@style/SelectStatementList"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:cacheColorHint="@color/white" />

        <LinearLayout
            android:id="@+id/layout_no_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_no_data"
                style="@style/AccountsSectionTitle"
                android:gravity="center_horizontal"
                android:textIsSelectable="false" />

            <LinearLayout style="@style/AccountsSectionBottomLine" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>