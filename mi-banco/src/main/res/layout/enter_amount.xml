<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rootView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/amount"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:digits="1234567890"
            android:inputType="phone"
            android:maxLength="8" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/amount_text"
                style="@style/AmountKeypadAmountText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/zero_amount"
                android:textColor="@color/amount_keypad_amount"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/amount_keypad_buttons_background"
            android:weightSum="2">

            <Button
                android:id="@+id/remember_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/remember_amount"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:theme="@style/Button.Grey" />

            <Button
                android:id="@+id/my_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/my_amounts"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:theme="@style/Button.Grey" />


            <LinearLayout
                android:id="@+id/cash_rewards_disclaimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/grey_lighter"
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:visibility="gone">


                <TextView
                    android:id="@+id/disclaimer"                                                                             android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="10dp"/>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/set_button"
                style="@style/AmountKeypadButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set" />

            <RelativeLayout
                android:id="@+id/grid_box"
                style="@style/AmountKeypadGridBox"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <GridView
                    android:id="@+id/gridKeypad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:horizontalSpacing="0dp"
                    android:listSelector="@null"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:verticalSpacing="0dp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>