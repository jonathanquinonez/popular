<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:paddingTop="40dp"
            android:text="@string/enrollment_lite_client_title"
            android:textColor="@color/athm_header"
            android:textSize="26sp"
            android:id="@+id/title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            android:text="@string/enrollment_lite_client_details"
            android:textColor="@color/black_87"
            android:layout_above="@+id/btnOk"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/passcode"
            android:id="@+id/image"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />



            <Button
                android:id="@+id/btnOk"
                style="@style/Button.Blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/athm_enroll"
                android:theme="@style/Button.Blue"
                android:visibility="visible"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="9dp" />

    </RelativeLayout>
</ScrollView>
