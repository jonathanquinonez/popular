<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:paddingTop="40dp"
            android:text="@string/enrollment_lite_client_title"
            android:textColor="@color/athm_header"
            android:textSize="26sp"
            android:id="@+id/txt_enrollment_lite_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_enrollment_lite_details"
            android:clickable="true"
            android:linksClickable="true"
            android:text="@string/enrollment_lite_client_details"
            android:textColor="@color/black_87" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_enrollment_lite_details2"
            android:text="@string/enrollment_lite_client_details2"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:textColor="@color/black_87" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingBottom="16dp">

            <Button
                android:id="@+id/btnEnroll"
                style="@style/Button.Blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enrollment_lite_aggre"
                android:theme="@style/Button.Blue"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>