<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
			style="@style/AccountsSectionTitle"
			android:text="@string/deposit_check_deposit_to"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
    
    <LinearLayout
        style="@style/AccountsItem"
        android:background="@color/black" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <RelativeLayout
            android:id="@+id/deposit_check_account_rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >
	        
	        <TextView
	            android:id="@+id/deposit_check_account_button"
	            style="@style/AddCheckSelectAccount"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:layout_gravity="center"
	            android:gravity="center_horizontal"
	            android:text="@string/deposit_check_select_account" />
        
	        <ImageView
	            android:layout_width="12dp"
	            android:layout_height="24dp"
	            android:layout_alignBottom="@id/deposit_check_account_button"
	            android:layout_alignParentRight="true"
	            android:layout_marginBottom="12dp"
	            android:layout_marginRight="24dp"
	            android:scaleType="centerInside"
	            android:src="@drawable/amount_arrow_holo_cut"
	            tools:ignore="ContentDescription" />
	        
		</RelativeLayout>

        <LinearLayout
            android:id="@+id/deposit_check_account_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/item_image"
                style="@style/AccountsItemImage"
                tools:ignore="ContentDescription" />

            <LinearLayout style="@style/AccountsItemInfoSection" >

                <TextView
                    android:id="@+id/item_name"
                    style="@style/AccountsItemTitleEasyDeposit"
                    android:textColor="@color/white" />

               	<LinearLayout 
               	    android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
               	    style="@style/AccountsItemInfoBottomSectionEasyDeposit" >

                    <TextView
                        android:id="@+id/item_comment"
                        style="@style/AccountsItemNumberEasyDeposit"
                        android:gravity="left" />
                    
                    <ImageView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:src="@drawable/amount_arrow_holo_cut"
			            android:gravity="right"
			            tools:ignore="ContentDescription" />
                    
                </LinearLayout>
               	
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>