<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.popular.android.mibanco.activity.EasyCashRedeem">

    <com.popular.android.mibanco.view.CustomCompoundBarcodeView
        android:id="@+id/zxing_barcode_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/receipt_layout"
        android:layout_marginBottom="-3dp"
        app:zxing_scanner_layout="@layout/custom_barcode_scanner"></com.popular.android.mibanco.view.CustomCompoundBarcodeView>

    <RelativeLayout
        android:id="@+id/receipt_layout"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:id="@+id/trxInfoHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtMcWithdrawalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/mc_scan_info_title"
                    android:textColor="@color/athm_header"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnDelete"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:text="@string/mc_deletetrx_title"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/headerSeparator"
                style="@style/HeaderSeparator"
                android:layout_below="@+id/trxInfoHeader"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/txtMcWithdrawalAccountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/trxInfoHeader"
                android:layout_centerVertical="true"
                android:layout_marginTop="12dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/tranInfoLayout"
                android:layout_below="@id/txtMcWithdrawalAccountName"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="11dp">

                <ImageView
                    android:id="@+id/accountImg"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/account_image_default" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toEndOf="@+id/accountImg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtAthType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@string/mc_ath_regular"
                        android:textColor="@color/grey_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtLast4Num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mc_pickup_last4num"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/linearLayout2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTrxAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="$20.00"
                        android:textColor="@color/athm_header"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTrxExpirationDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/mc_pickup_expiration"
                        android:textAlignment="gravity"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl_mc_nocamera_permission"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="126dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/mc_no_camera_permission_title"
            android:id="@+id/textViewCameraPermissionTitle"
            android:textColor="@color/grey_light"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mc_no_camera_permission"
            android:id="@+id/textViewCameraPermission"
            android:textColor="@color/grey_light"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/textViewCameraPermissionTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"/>

    </RelativeLayout>

</RelativeLayout>
