<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_marginVertical="7dp"
    style="@style/AccountsItem" >

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <RelativeLayout
            style="@style/AccountsItemImage"
            android:layout_height="match_parent"
            android:layout_width="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_image"
                style="@style/AccountsItemImage"
                android:src="@drawable/account_image_default"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/onoff_plastic_layout"
                style="@style/AccountPlasticsStatusView"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/onoff_plastic_card"
                    style="@style/AccountsOnOffPlastic"
                    android:src="@drawable/onoff_plastic_card"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/onoff_plastic_count"
                    style="@style/AccountsOnOffPlasticCount" />

                <TextView
                    android:id="@+id/onoff_plastic_off"
                    style="@style/AccountsOnOffPlasticView"
                    android:text="@string/on_off_indicator" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            style="@style/AccountsItemInfoSection"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/item_name"
                style="@style/AccountsItemTitle" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/item_comment"
                    style="@style/AccountsItemNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/back_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="15dp"
                    android:tint="#999999"
                    app:srcCompat="@drawable/back_icon"/>

            </LinearLayout>


            <LinearLayout style="@style/AccountsItemInfoBottomSection">

                <TextView
                    android:id="@+id/item_value"
                    style="@style/AccountsAccountBalance" />
                <RelativeLayout
                    android:id="@+id/premia_loading_balance_view"
                    style="@style/AccountsAccountBalance"
                    >
                    <ImageView
                        android:id="@+id/premia_balance_loading_item"
                        style="@style/TsysLoyaltyRewardsLoading"
                        android:src="@drawable/small_loading" />

                </RelativeLayout>
                <!-- Tsys Loyalty Rewards Info Area -->
                <LinearLayout
                    android:id="@+id/tsys_loyalty_rewards_view"
                    style="@style/TsysLoyaltyRewardsContainer">

                    <TextView
                        android:id="@+id/tsys_loyalty_rewards_title"
                        style="@style/TsysLoyaltyRewardsContainerText"
                        android:text="@string/tsys_loyalty_rewards_description" />

                    <ImageView
                        android:id="@+id/tsys_loyalty_rewards_loading"
                        style="@style/TsysLoyaltyRewardsLoading"
                        android:src="@drawable/small_loading" />

                    <TextView
                        android:id="@+id/tsys_loyalty_rewards_balance"
                        style="@style/TsysLoyaltyRewardsContainerText" />
                </LinearLayout>
                <!-- Tsys Loyalty Rewards Info Area -->


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_separator_account"
        style="@style/AccountsItemBottomLine"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal"
        >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <TextView
            android:id="@+id/item_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>